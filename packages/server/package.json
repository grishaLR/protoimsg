{
  "name": "@chatmosphere/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "start": "node --env-file=.env dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx --env-file=.env src/db/migrate.ts",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@atproto/api": "^0.13.0",
    "@atproto/oauth-client-node": "^0.2.0",
    "@chatmosphere/lexicon": "workspace:*",
    "@chatmosphere/shared": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "postgres": "^3.4.5",
    "helmet": "^8.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/ws": "^8.5.14",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
