{
  "name": "@chatmosphere/ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    "./tokens": "./src/tokens/index.css",
    "./StatusDot": {
      "types": "./dist/components/StatusDot.d.ts",
      "default": "./dist/components/StatusDot.js"
    },
    "./UserChip": {
      "types": "./dist/components/UserChip.d.ts",
      "default": "./dist/components/UserChip.js"
    },
    "./ChatBubble": {
      "types": "./dist/components/ChatBubble.d.ts",
      "default": "./dist/components/ChatBubble.js"
    },
    "./WindowChrome": {
      "types": "./dist/components/WindowChrome.d.ts",
      "default": "./dist/components/WindowChrome.js"
    },
    "./BuddyGroup": {
      "types": "./dist/components/BuddyGroup.d.ts",
      "default": "./dist/components/BuddyGroup.js"
    },
    "./DropdownMenu": {
      "types": "./dist/components/DropdownMenu.d.ts",
      "default": "./dist/components/DropdownMenu.js"
    },
    "./InputField": {
      "types": "./dist/components/InputField.d.ts",
      "default": "./dist/components/InputField.js"
    },
    "./Modal": {
      "types": "./dist/components/Modal.d.ts",
      "default": "./dist/components/Modal.js"
    },
    "./Badge": {
      "types": "./dist/components/Badge.d.ts",
      "default": "./dist/components/Badge.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && (mkdir -p dist/components && cp src/components/*.module.css dist/components/ 2>/dev/null || true)",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@chatmosphere/shared": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/react-vite": "^10.2.7",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "storybook": "^10.2.7",
    "typescript": "^5.7.3",
    "vite": "^6.0.0"
  }
}
